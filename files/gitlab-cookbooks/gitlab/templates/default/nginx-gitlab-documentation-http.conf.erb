# erased! To change the contents below, edit /etc/gitlab/gitlab.rb
# and run `sudo gitlab-ctl reconfigure`.

server {
    listen <%= @port %>;
    server_name  <%= @fqdn %>;
    root <%= Gitlab['node']['package']['install-dir']/embedded/service/gitlab-documentation;
    gzip_static on;
    gunzip on;
    gzip_static on;
    index  index.html;
    error_page 404 /404.html;

    location / {
        rewrite ^(.*)/$ $1/index.html;
    }
}
