global
    user <%= @user %>
    group <%= @group %>
    chroot <%= @working_dir %>
    stats socket <%= @working_dir %>/admin.sock mode 660 level admin
    ca-base <%= @ca_base %>
    crt-base <%= @crt_base %>
<% if @global && @global.any? %>
    <% @global.each do |setting| %>
    <% key = setting.first %>
    <% values = setting.last %>
    <% values.each do |value| %>
      <%= "#{key} #{value}" %>
    <% end %>
    <% end %>
<% end %>

<% if @defaults && @defaults.any? %>
defaults
    <% @defaults.each do |setting| %>
    <% key = setting.first %>
    <% values = setting.last %>
    <% values.each do |value| %>
      <%= "#{key} #{value}" %>
    <% end %>
    <% end %>
<% end %>

<% if @listen && @listen.any? %>
<% @listen.each do |name, values| %>
listen <%= name %>
  <% values.each do |setting| %>
  <% key = setting.first %>
  <% values = setting.last %>
  <% values.each do |value| %>
    <%= "#{key} #{value}" %>
  <% end %>
  <% end %>

<% end %>
<% end %>
