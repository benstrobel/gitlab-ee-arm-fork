<% if @global.any? %>
global
    <% @global.each do |setting| %>
    <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
    <% end %>
<% end %>

<% if @defaults.any? %>
defaults
    <% @defaults.each do |setting| %>
    <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
    <% end %>
<% end %>

<% if @frontend.any? %>
<% @frontend.each do |name, values| %>
frontend <%= name %>
  <% values.each do |setting| %>
  <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
  <% end %>

<% end %>
<% end %>

<% if @backend.any? %>
<% @backend.each do |name, values| %>
backend <%= name %>
  <% values.each do |setting| %>
  <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
  <% end %>

<% end %>
<% end %>

<% if @listen.any? %>
<% @listen.each do |name, values| %>
listen <%= name %>
  <% values.each do |setting| %>
  <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
  <% end %>

<% end %>
<% end %>
