global
    user <%= @user %>
    group <%= @group %>
    chroot <%= @working_dir %>
    stats socket <%= @working_dir %>/admin.sock mode 660 level admin
    ca-base <%= @ca_base %>
    crt-base <%= @crt_base %>
<% if @global && @global.any? %>
  <%= render 'haproxy_partial.erb', variables: { settings: @global } %>
<% end %>

<% if @defaults && @defaults.any? %>
defaults
  <%= render 'haproxy_partial.erb', variables: { settings: @defaults } %>
<% end %>

<% if @listen && @listen.any? %>
<% @listen.each do |name, values| %>
listen <%= name %>
  <%= render 'haproxy_partial.erb', variables: { settings: values } %>
<% end %>
<% end %>
