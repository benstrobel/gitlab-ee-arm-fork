global
    user <%= @user %>
    group <%= @group %>
    chroot <%= @working_dir %>
    stats socket <%= @working_dir %>/admin.sock mode 660 level admin
    ca-base <%= @ca_base %>
    crt-base <%= @crt_base %>
<% if @global.any? %>
    <% @global.each do |setting| %>
    <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
    <% end %>
<% end %>

<% if @defaults.any? %>
defaults
    <% @defaults.each do |setting| %>
    <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
    <% end %>
<% end %>

<% if @listen.any? %>
<% @listen.each do |name, values| %>
listen <%= name %>
  <% values.each do |setting| %>
  <%= setting.map{ |name, value| "#{name} #{value}"}.first %>
  <% end %>

<% end %>
<% end %>
