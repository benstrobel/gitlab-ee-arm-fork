#!/bin/bash
set -e # fail on errors

# Redirect stderr -> stdout
exec 2>&1

cd <%= @options[:dir] %>

exec chpst -P \
  -U <%= @options[:username] %>:<%= @options[:group] %> \
  -u <%= @options[:username] %>:<%= @options[:group] %> \
  /opt/gitlab/embedded/bin/jaeger-agent \
    --reporter.grpc.host-port=<%= @options[:collector] %> \
    --jaeger.tags=<%= @options[:tags] %>
