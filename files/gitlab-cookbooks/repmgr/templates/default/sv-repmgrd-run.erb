#!/bin/bash
set -e # fail on errors

# Redirect stderr -> stdout
exec 2>&1

cd <%= @options[:dir] %>

exec chpst -P \
  -U <%= @options[:username] %>:<%= @options[:groupname] %> \
  -u <%= @options[:username] %>:<%= @options[:groupname] %> \
  /opt/gitlab/embedded/bin/repmgrd -f <%= @options[:config_file] %>
