require 'chef_helper'

describe 'go-crond::enable' do
  let(:chef_run) { ChefSpec::SoloRunner.converge('go-crond::enable') }

  it "should create a cron.d directory" do
    expect(chef_run).to create_directory("/opt/gitlab/embedded/etc/cron.d").with(
      recursive: true,
      owner: "root"
    )
  end

  it "should create a runit_service" do
    pending("debug this matcher")
    expect(chef_run).to enable_runit_service("go-crond").with(
      owner: "root",
      group: "root"
    )
  end
end
